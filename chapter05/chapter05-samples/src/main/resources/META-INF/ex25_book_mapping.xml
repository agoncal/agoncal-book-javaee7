                 xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm http://java.sun.com/xml/ns/persistence/orm_2_1.xsd"
                 version="2.1">

  <entity class="org.agoncal.book.javaee7.chapter05.ex25.Book25">
